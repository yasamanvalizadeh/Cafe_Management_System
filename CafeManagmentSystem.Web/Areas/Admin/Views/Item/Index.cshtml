@using CafeManagementSystem.Common.CommonExtensionMethods;
@model IEnumerable<CafeSystemManagement.Entities.Item>
@{
    var ModelStateErrorText = TempData["ModelStateErrorText"];
}

<div class="pink-container"> 
    <main class="main-content position-relative border-radius-lg ps ps--active-y" style="height: auto;">
        <p style="width: 100%;text-align:center;font-size:25px;margin-bottom:30px;" class="text-danger">
            @ModelStateErrorText
        </p>

        <!-- All Items   -->
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h3 style="color:white;letter-spacing: 2px;padding-left: 1rem !important;text-transform: capitalize !important;">
                        Manage Items
                    </h3>
                </div>
                </div>
            <table class="t-items">
                <tr>
                    <th>
                        Item Name
                    </th> 
                    <th>
                        Category
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Added Date
                    </th>
                    <th>
                        Last Update Date
                    </th>
                    <th>
                        Edit
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>
                            @item.ItemName
                        </td>
                        <td>
                            @item.Category
                        </td>
                        <td>
                            @item.UnitPrice
                        </td>
                        <td>
                            @string.Format("{0:MM/dd/yyyy}", item.AddedDate)
                        </td>
                        <td>
                            @string.Format("{0:MM/dd/yyyy}", item.UpdateDate)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ItemId">
                                <button type="submit" style="background-color:transparent;border:none;">
                                    <div class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl" style="width: 40px;height: 40px;display: flex;align-items: center;justify-content: center;margin:auto;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                            <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                        </svg>
                                    </div>
                                </button>
                            </a>
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.ItemId" method="post">
                                <button type="submit" style="background-color:transparent;border:none;">
                                    <div class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl" style="width: 40px;height: 40px;display: flex;align-items: center;justify-content: center;margin:auto;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                        </svg>
                                    </div>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
     
    </main>
</div>

